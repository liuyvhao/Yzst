<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="48dp"
            android:background="@color/dLine" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_main_home"
                android:drawablePadding="-2dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="主页"
                android:textColor="@color/radio_main_txt"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/webSite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_main_ws"
                android:drawablePadding="-2dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="营业网点"
                android:textColor="@color/radio_main_txt"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_main_center"
                android:drawablePadding="-2dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="我的"
                android:textColor="@color/radio_main_txt"
                android:textSize="10sp" />
        </RadioGroup>
    </RelativeLayout>

</TabHost>